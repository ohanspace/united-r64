<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:text="C"
            android:gravity="center"
            android:textSize="24dp"
            android:src="@drawable/ic_action_profile"
            android:id="@+id/trainer_list_item_avatar"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/trainer_list_item_avatar"
            android:textSize="16sp"
            android:text="Chy Raihan Evna Sultan"
            android:textColor="#de000000"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:id="@+id/trainer_list_item_displayName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director General"
            android:layout_toEndOf="@id/trainer_list_item_avatar"
            android:layout_below="@id/trainer_list_item_displayName"
            android:textColor="#333"
            android:id="@+id/trainer_list_item_designation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chief Adviser"
            android:layout_toEndOf="@id/trainer_list_item_avatar"
            android:layout_below="@id/trainer_list_item_designation"
            android:id="@+id/trainer_list_item_trainingPost"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_alignTop="@id/trainer_list_item_avatar">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_action_call"
                android:id="@+id/trainer_list_item_callBtn"
                android:layout_gravity="right"
                android:background="#80FFFFFF"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_action_mail"
                android:id="@+id/trainer_list_item_emailBtn"
                android:layout_gravity="right"
                android:background="#80FFFFFF"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>