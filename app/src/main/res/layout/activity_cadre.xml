<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/include_toolbar_main"
        android:id="@+id/include_toolbar_main"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/include_toolbar_main"
        android:layout_alignBottom="@id/cadre_activity_buttons"
        android:id="@+id/cadre_activity_scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:text="A21"
                android:textStyle="bold"
                android:visibility="gone"
                android:id="@+id/cadre_activity_rollNo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chy Raihan Evna Sultan fafafafaasfafafs"
                android:textColor="#de000000"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:textSize="22sp"
                android:id="@+id/cadre_activity_displayName"/>
            <android.support.v7.widget.CardView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="64dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:layout_height="128dp"
                    android:layout_width="match_parent"
                    android:id="@+id/cadre_activity_avatar"
                    android:src="@drawable/ic_person_pin_round"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
            </android.support.v7.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadre Id not found"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:id="@+id/cadre_activity_cadreId"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35th BCS Public works"
                android:textColor="#333"
                android:textSize="18sp"
                android:id="@+id/cadre_activity_cadreBatchType"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chittagong PWD E/M division"
                android:textSize="18sp"
                android:id="@+id/cadre_activity_postingAddress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group A+"
                android:textColor="#ee00"
                android:textSize="16sp"
                android:id="@+id/cadre_activity_bloodGroup" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home district"
                android:textStyle="italic"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:id="@+id/cadre_activity_homeDistrict"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:id="@+id/cadre_activity_university"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:id="@+id/cadre_activity_session"/>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:id="@+id/cadre_activity_buttons">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Call"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:layout_margin="3dp"
            android:layout_gravity="bottom"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_action_call"
            android:drawablePadding="-20dp"
            android:id="@+id/cadre_activity_callBtn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:layout_gravity="bottom"
            android:layout_margin="3dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_action_email"
            android:drawablePadding="-20dp"
            android:id="@+id/cadre_activity_emailBtn"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#91D4FA"
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/cadre_activity_progressBarFrame">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"/>
    </FrameLayout>
</RelativeLayout>

